<div class="panel panel-success">
    <!-- Default panel contents -->
    <div class="panel-heading">All Students</div>

    <!-- Table -->
    <table class="table table-striped">
        <thead class="thead-inverse">
            <p>

            </p>
            <tr>
                <th>
                    @Html.ActionLink("Course Name", "Index", new { SortOrder = ViewBag.CourseName })
                </th>
                <th>
                    @Html.ActionLink("Name", "Index", new { SortOrder = ViewBag.StudentName })
                </th>
                <th>
                    @Html.ActionLink("Surname", "Index", new { SortOrder = ViewBag.StudentSurname })
                </th>
                <th>
                    @Html.ActionLink("Student Number", "Index", new { SortOrder = ViewBag.StudentNumber })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentNumber)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info"> <a href="javascaript:void(0);" class="anchorEdit" data-id="@item.StudentId">Update</a> </button>
                        <button type="button" class="btn btn-info"> <a href="javascaript:void(0);" class="anchorDetail" data-id="@item.StudentId">Details</a> </button>
                        <button type="button" class="btn btn-info">@Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { onclick = "return confirm('Are you sure you wish to delete this record?');" })</button>
                    </td>
                </tr>
            }
        </thead>
    </table>
</div>

